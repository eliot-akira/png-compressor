{
  "name": "png-compressor",
  "version": "2.0.0",
  "type": "module",
  "description": "Compress and encode data in PNG image",
  "repository": {
    "type": "git",
    "url": "https://github.com/eliot-akira/png-compressor"
  },
  "keywords": [
    "gzip",
    "png",
    "cartridge"
  ],
  "author": "Eliot Akira",
  "license": "MIT",
  "main": "build/cjs/index.js",
  "module": "build/esm/index.js",
  "bin": {
    "png-compressor": "./bin/png-compressor"
  },
  "exports": {
    ".": {
      "types": "./build/types/index.d.ts",
      "require": "./build/cjs/index.js",
      "import": "./build/esm/index.js"
    },
    "./*": {
      "types": "./build/types/*.d.ts",
      "require": "./build/cjs/*.js",
      "import": "./build/esm/*.js"
    }
  },
  "files": [
    "build",
    "license",
    "readme.md"
  ],
  "scripts": {
    "build:cjs": "bun build.ts cjs",
    "build:esm": " bun build.ts esm",
    "build:web": "bun build.ts web",
    "build:types": "tsc --project tsconfig.types.json --declaration --emitDeclarationOnly --outDir build/types",
    "build": "mkdir -p build && npm run clean && npm run format && npm run build:web && npm run build:cjs && npm run build:esm && npm run build:types",
    "start": "concurrently --raw 'npm run dev' 'npm run docs:dev'",
    "dev": "bun build.ts dev",
    "docs": "typedoc",
    "docs:dev": "npm run docs -- --watch --preserveWatchOutput",
    "test": "bun tests/index.ts",
    "tdd": "chokidar \"src/**/*.ts\" \"tests/**/*.ts\" --initial --silent --command \"bun run test\"",
    "clean": "rm -rf build/cjs/* && rm -rf build/esm/* && rm -rf build/web/*",
    "format": "prettier --no-config --no-semi --single-quote --write src",
    "release": "npm run build && npm publish --access public"
  },
  "dependencies": {},
  "devDependencies": {
    "@gjsify/esbuild-plugin-transform-ext": "^0.0.3",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^8.2.0",
    "esbuild": "^0.25.2",
    "esbuild-node-externals": "^1.18.0",
    "prettier": "^3.0.1",
    "testra": "^2.1.5",
    "typedoc": "^0.24.8",
    "typedoc-plugin-markdown": "^3.15.4",
    "typedoc-plugin-mdn-links": "^3.0.3"
  }
}
